{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node14/tsconfig.json",
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "sourceMap": true,
    "removeComments": false,
    "esModuleInterop": true,
    "strict": true,
    "types": ["node"],
    "outDir": "build",
    "checkJs": true,
    "lib": ["es2020", "dom"]
  },
  "include": ["lib"]
}
